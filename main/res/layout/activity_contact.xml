<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ContactActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/sample_menu"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton3"
                    android:onClick="onBackClick"
                    app:backgroundTint="#9B86C1"/>
            <TextView
                    android:text="@string/contact_us"
                    android:layout_height="wrap_content"
                    android:id="@+id/conTextView"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="Sam Wong sam543@uw.edu feel free to drop me a reccomendation letter or two im crying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4"/>
</LinearLayout>